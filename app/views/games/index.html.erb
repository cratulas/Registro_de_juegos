<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="1">Picture</th>
      <th colspan="3"></th>
      
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= image_tag game.board_photo.variant(resize:  "100x100", colorspace: "gray")%></td>        
        <td><%= link_to "Preview", rails_blob_path(game.board_photo, disposition: 'preview') %></td>
        <td><%= link_to "Download", rails_blob_path(game.board_photo, disposition: 'attachment') %><td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
